<%= form_with(model: doador, local: true) do |form| %>
<div class="form-wrapper">
  <h1>CADASTRO DE DOADOR</h1>
  <form>
    <div id="first-part">
      <div id="photo-wrapper">
        <h1 class="title"> Dados Gerais </h1>
        <label for="photo-upload" id="photo-upload-label">
          <%= image_tag 'photo' %>
          <span> Upload Photo </span>
        </label>
        <%= form.file_field :image, id:'photo-upload'%>
      </div>
      <div id="data-wrapper">
        <div class="field">
          <label for="donor-name">Nome</label>
          <%= form.text_field :nome, id:'donor-name', placeholder:'Insira o seu nome'%>
        </div>
        <div class="field">
          <label>Email</label>
          <%= form.email_field :email, autofocus: true, placeholder:'Insira o seu e-mail'%>
        </div>
        <div class="field">
          <label>RG</label>
          <%= form.text_field :rg, placeholder:'Insira o seu RG'%>
        </div>
        <div class="field">
          <label>CPF</label>
          <%= form.text_field :cpf, placeholder:'Insira o seu CPF'%>
        </div>
        <div class="field">
          <label>Telefone</label>
          <%= form.text_field :telefone, placeholder:'Insira o seu Telefone'%>
        </div>
      </div>
    </div>
    <div id="second-part">
      <h1 class="title">Dados de Localização</h1>
      <div id="location-wrapper">
        <div class="field">
          <label>CEP</label>
          <%= form.text_field :cep, placeholder:'Insira o seu CEP'%>
        </div>
        <div class="field">
          <label for="">Cidade</label>
          <%= form.text_field :cidade,  placeholder:'Insira a sua Cidade'%>
        </div>
        <div class="field">
          <label>Estado</label>
          <%= form.text_field :uf, placeholder:'Insira o seu Estado'%>
          </div>
        </div>
        <div class="field">
          <label>Bairro</label>
          <%= form.text_field :bairro, placeholder:'Insira o seu Bairro' %>
        </div>
        <div class="field">
          <label>Número</label>
          <%= form.text_field :numero, placeholder:'Insira o seu Número'%>
        </div>
        <div class="field">
          <label>Endereço</label>
          <%= form.text_field :endereco, placeholder:'Insira o seu Endereço'%>
        </div>
      </div>
      <hr class="divisor" />
      <h1 class="title">Dados de Acesso</h1>
      <div id="password-wrapper">
        <div class="field">
          <label>Escolha uma Senha</label>
          <%= form.password_field :password, autocomplete: "off", placeholder:'Mínimo de 6 caracteres'%>
        </div>
        <div class="field">
          <label>Repita a Senha</label>
          <%= form.password_field :password_confirmation, autocomplete: "off", placeholder:'Mínimo de 6 caracteres'%>
        </div>
      </div>
      <%= form.submit 'CADASTRAR', id:'submit-button'  %>
    </div>
</div>

<% end %>

<%= render 'layouts/footer' %>

